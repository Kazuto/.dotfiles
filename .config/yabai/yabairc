yabai -m config layout bsp

yabai -m config window_placement second_child

yabai -m config external_bar main:26:0

# padding
PADDING=10

yabai -m config top_padding $PADDING
yabai -m config right_padding $PADDING
yabai -m config bottom_padding $PADDING
yabai -m config left_padding $PADDING
yabai -m config window_gap $PADDING

yabai -m config window_border_width = 4
yabai -m config active_window_border_color 0xFFFF00FF

yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9
yabai -m config window_border_radius 10

# mouse settings
yabai -m config mouse_follows_focus on

yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m mouse_drop_action swap

# disable specific apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off
yabai -m rule --add app="^Microsoft Teams$" manage=off
yabai -m rule --add app="^Microsoft Teams classic$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
